<p id="notice"><%= notice %></p>

<h1>Musicians</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Instrument</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musicians.order('LOWER(last)').each do |musician| %>
      <tr>
        <td><%= musician.name %></td>
        <td><%= musician.instrument %></td>
        <td><%= musician.notes %></td>
        <td><%= link_to 'Show', musician, class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_musician_path(musician), class: 'btn btn-warning btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Musician', new_musician_path, class: 'btn btn-primary btn-lg' %>
