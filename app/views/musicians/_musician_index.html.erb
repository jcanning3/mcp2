  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Instrument</th>
        <th>Notes</th>
        <th colspan="3"></th>
      </tr>
  </thead>

  <tbody>

    <% @musicians.order('LOWER(last)').each do |musician| %>
      <tr>
        <td><%= musician.name %></td>
	<td><%= musician.instrument.name if musician.instrument %> </td>
        <td><%= musician.notes %></td>
        <td><%= link_to 'Show', musician, class: 'btn btn-warning btn-sm' if @buttons %></td>
        <td><%= link_to 'Edit', edit_musician_path(musician), class: 'btn btn-warning btn-sm' if @buttons %></td>
      </tr>

	<% @bits = musician.sheets %>
        <% @bits.each do |s| %>
          <tr>
            <td> </td>
            <td colspan="1" ><%= s.created_at.strftime("%m/%d/%y %I:%M%p") %></td>
            <td colspan="1" ><%= s.note %></td>
            <td colspan="3" > </td>
          </tr>
        <% end %>

    <% end %>

  </tbody>
</table>
