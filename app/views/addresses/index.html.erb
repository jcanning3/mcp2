<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Nickname</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.order(:nickname).each do |address| %>
      <tr>
        <td><%= address.name %></td>
        <td><%= address.nickname %></td>
        <td><%= address.address1 %></td>
        <td><%= address.address2 %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.zip %></td>
        <td><%= address.phone %></td>
        <td><%= link_to 'Show', address, class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Edit', edit_address_path(address), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path, class: "btn btn-primary btn-sm" %>
