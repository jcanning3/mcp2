<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Order</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.order(:order).each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.order %></td>
        <td><%= link_to 'Show', task, class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
