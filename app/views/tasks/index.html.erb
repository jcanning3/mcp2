<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Order</th>
      <th>Adjust Start</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.order(:order).each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.order %></td>
        <td><%= task.adjust_start %></td>
        <td><%= link_to 'Show', task, class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class: 'btn btn-primary btn-sm' %>
