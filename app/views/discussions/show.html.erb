<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @discussion.date.strftime("%a %m/%d/%y") %>
</p>

<p>
  <strong>Color:</strong>
  <%= @discussion.color %>
</p>

<p>
  <strong>Resolved:</strong>
  <%= @discussion.resolved %>
</p>

<h2>Nested Notes for <%= @discussion.date.strftime("%a %m/%d/%y") %> </h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Nested Notes </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bits = @discussion.sheets %>
    <% @bits.each do |s| %>
      <tr bgcolor="<%=@discussion.color%>">
        <td><%= s.created_at.strftime("%m/%d/%y %I:%M%p") %></td>
        <td colspan="2" ><%= s.note %></td>
        <td colspan="3" ></td>
        <td><%= link_to 'Edit', edit_sheet_path(s), class: 'btn btn-warning btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br> 

<%= link_to 'Edit', edit_discussion_path(@discussion), class: 'btn btn-warning btn-sm' %> |
<%= link_to 'Back', discussions_path, class: 'btn btn-warning btn-sm' %>

