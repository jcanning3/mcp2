<p id="notice"><%= notice %></p>

<h1>Discussions</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Color</th>
      <th>Resolved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discussions.each do |discussion| %>
      <tr>
        <td><%= discussion.date %></td>
        <td><%= discussion.color %></td>
        <td><%= discussion.resolved %></td>
        <td><%= link_to 'Show', discussion, class: 'btn btn-warning btn-sm'  %></td>
        <td><%= link_to 'Edit', edit_discussion_path(discussion), class: 'btn btn-warning btn-sm'  %></td>
        <td><%= link_to 'Destroy', discussion, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Discussion', new_discussion_path, class: 'btn btn-primary btn-lg' %>
