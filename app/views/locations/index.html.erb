<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table class='table table-hover' >
  <thead>
    <tr>
      <th>Name</th>
      <th>Nickname</th>
      <th>Address</th>
      <th>Color</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.order(:name).each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.nickname %></td>
	<td><%= location.address.nickname if location.address %></td>
        <td><%= location.color %></td>
        <td><%= location.id %></td>
        <td><%= link_to 'Show', location, class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_location_path(location), class: 'btn btn-warning btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path, class: 'btn btn-primary btn-sm' %>
