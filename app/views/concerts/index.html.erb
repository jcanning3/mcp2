<p id="notice"><%= notice %></p>

<h1>Concerts</h1>

<table class="table table-hover" >
  <thead>
    <tr>
      <th>Date</th>
      <th>StartTime</th>
      <th>Name</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.order('startTime desc').each do |concert| %>
      <tr>
	<td><%= concert.startTime.strftime("%A, %B %e, %Y") %></td>
        <td><%= concert.startTime.strftime("%I:%M %p") %></td>
        <td><%= concert.name %></td>
        <td><%= concert.id %></td>
        <td><%= link_to 'Show', concert, class: 'btn btn-warning btn-sm'  %></td>
        <td><%= link_to 'Edit', edit_concert_path(concert), class: 'btn btn-warning btn-sm' %></td>
        <!td><!%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' } %><!/td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Concert', new_concert_path, class: 'btn-primary btn-lg'  %>
