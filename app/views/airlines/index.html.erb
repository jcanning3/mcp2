<p id="notice"><%= notice %></p>

<h1>Airlines</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Nickname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airlines.order(:name).each do |airline| %>
      <tr>
        <td><%= airline.name %></td>
        <td><%= airline.nickname %></td>
        <td><%= link_to 'Show', airline, class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_airline_path(airline), class: 'btn btn-warning btn-sm' %></td>
        <td><! %= link_to 'Destroy', airline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Airline', new_airline_path, class: 'btn btn-primary btn-lg' %>
