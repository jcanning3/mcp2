<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Nickname</th>
      <th>Color</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.order('nickname').each do |team| %>
      <tr>
        <td><%= team.nickname %></td>
        <td><%= team.color %></td>
        <td><%= team.id %></td>
        <td><%= link_to 'Show', team,                 class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_team_path(team), class: 'btn btn-warning btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path, class: 'btn btn-primary btn-lg' %>
