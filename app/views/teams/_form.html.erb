
<%= simple_form_for(@team) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nickname %>
    <%= f.input :color %>
    <%= f.association :festival %>
  </div>

  <div>
    <h4>Notes</h4>

    <div id="sheets">
      <%= f.fields_for :sheets do |sheet| %>
        <%= render 'sheet_fields', f: sheet %>
      <% end %>

      <div class="links">
        <%= link_to_add_association 'Add Note', f, :sheets, class: 'btn btn-success btn-sm' %>
      </div>
    </div>
  </div>

<br> <br>

  <div>
    <h4>Links to Musicians</h4>

    <div id="musicians">
      <%= f.fields_for :team_musicians do |tm| %>
        <%= render 'team_musician_fields', f: tm %>
      <% end %>

      <br>

      <div class="links">
        <%= link_to_add_association 'Link Musician', f, :team_musicians, class: 'btn btn-success btn-sm' %>
      </div>
    </div>

    <br>
<br> <br>

    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-success btn-sm' %>
    </div>
  </div>
<% end %>

