<p id="notice"><%= notice %></p>

<h1>Ticket Categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ticket_categories.each do |ticket_category| %>
      <tr>
        <td><%= ticket_category.name %></td>
        <td><%= link_to 'Show', ticket_category, class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_ticket_category_path(ticket_category), class: 'btn btn-warning btn-sm' %></td>
        <td><!%= link_to 'Destroy', ticket_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket Category', new_ticket_category_path, class: 'btn btn-primary btn-lg' %>
