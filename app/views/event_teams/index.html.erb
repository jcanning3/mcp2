<p id="notice"><%= notice %></p>

<h1>Event Teams</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Event</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_teams.includes(:team).order('teams.nickname').each do |event_team| %>
      <tr>
        <td><%= event_team.event.name %></td>
        <td><%= event_team.team.nickname %></td>
        <td><%= link_to 'Show', event_team, class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_event_team_path(event_team), class: 'btn btn-warning btn-sm' %></td>
	<td><%= link_to 'Destroy', event_team, method: :delete, data: { confirm: 'Really?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event Team', new_event_team_path, class: 'btn btn-primary btn-sm' %>
