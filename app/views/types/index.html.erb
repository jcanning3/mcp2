<p id="notice"><%= notice %></p>

<h1>Types</h1>

<table class='table table-hover' >
  <thead>
    <tr>
      <th>Name</th>
      <th>Nickname</th>
      <th>Color</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.order('LOWER(color)').each do |type| %>
      <tr bgcolor="<%=type.color%>">
        <td><%= type.name %></td>
        <td><%= type.nickname %></td>
        <td><%= type.color %></td>
        <td><%= type.id %></td>
        <td><%= link_to 'Show', type, class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_type_path(type), class: 'btn btn-warning btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Type', new_type_path, class: 'btn btn-primary btn-sm' %>

