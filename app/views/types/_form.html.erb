<%= simple_form_for(@type) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :nickname %>
    <%= f.input :color %>
  </div>

  <br> <br> <br>

  <div>
    <p><strong>Tasks:</strong></p>
    <div id="tasks">
      <%= f.fields_for :task_types do |tt| %>
        <%= render 'task_type_fields', f: tt %>
      <% end %>

      <br>

      <div class="links">
        <%= link_to_add_association 'Link Task to Type', f, :task_types, class: 'btn btn-success btn-sm' %>
      </div>
    </div>
  </div>

  <br>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success btn-sm' %>
  </div>
<% end %>

<br>
