<p id="notice"><%= notice %></p>

<h1>Performers</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Listing</th>
      <th>Concert</th>
      <th>Musician</th>
      <th>Instrument</th>
      <th>Piece</th>
      <th>Concert date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @performers.each do |performer| %>
      <tr>
        <td><%= performer.listing %></td>
        <td><%= performer.concert.name %></td>
        <td><%= performer.musician.name %></td>
        <td><%= performer.instrument %></td>
        <td><%= performer.piece.name %></td>
        <td><%= performer.concert.startTime.strftime("%a, %b %e, %Y")%></td>
        <td><%= link_to 'Show', performer, class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_performer_path(performer), class: 'btn btn-warning btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Performer', new_performer_path, class: 'btn btn-primary btn-sm' %>
