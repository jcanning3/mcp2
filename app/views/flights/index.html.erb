<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Musician</th>
      <th>CO#</th>
      <th>Date</th>
      <th>Flight</th>
      <th>From</th>
      <th>To</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.order(:departure).each do |flight| %>
      <tr>
        <td><%= flight.musician.name %></td>
        <td><%= flight.confirmation %></td>
        <td><%= flight.try(:departure).try(:strftime, "%m/%d/%y") %></td>
        <td><%= flight.airline.nickname %> <%= flight.flight %></td>
        <td><%= flight.from %>
            <%= flight.try(:departure).try(:strftime, "%I:%M%p") %></td>
        <td><%= flight.destination %>
            <%= flight.try(:arrival).try(:strftime, "%I:%M%p") %></td>
        <td><%= flight.notes %></td>
        <td><%= link_to 'Show', flight, class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight), class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td> </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flight', new_flight_path, class: 'btn btn-primary btn-lg' %>
