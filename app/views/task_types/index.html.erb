<p id="notice"><%= notice %></p>

<h1>Task Types</h1>

<table style="table table-hover">
  <thead>
    <tr>
      <th>Order</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_types.order(:order).each do |task_type| %>
      <tr>
        <td><%= task_type.name %></td>
        <td><%= task_type.order %></td>
        <td><%= link_to 'Show', task_type, class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_task_type_path(task_type), class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Destroy', task_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task Type', new_task_type_path, class: 'btn btn-primary btn-sm' %>
