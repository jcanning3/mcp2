<p id="notice"><%= notice %></p>

<h1>Festivals</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Dates</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @festivals.order(start: :desc).each do |festival| %>
      <tr>
        <td><%= festival.id %></td>
        <td><%= festival.name %></td>
        <td><%= festival.dates %></td>

        <td><%= link_to 'Show', festival,                      class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to 'Edit', edit_festival_path(festival),  class: 'btn btn-warning btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Festival', new_festival_path, class: 'btn btn-success btn-lg' %>
