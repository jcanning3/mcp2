<p id="notice"><%= notice %></p>

<h1>Composers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Nickname</th>
      <th>Lifetime</th>
      <th>Fullname</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @composers.each do |composer| %>
      <tr>
        <td><%= composer.name %></td>
        <td><%= composer.nickname %></td>
        <td><%= composer.lifetime %></td>
        <td><%= composer.fullname %></td>
        <td><%= composer.notes %></td>
        <td><%= link_to 'Show', composer %></td>
        <td><%= link_to 'Edit', edit_composer_path(composer) %></td>
        <td><%= link_to 'Destroy', composer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

